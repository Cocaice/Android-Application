<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/imagePart"
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <ImageView
        android:id="@+id/goodsimage"
        android:src="@drawable/ferrero"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <ImageView
        android:id="@+id/back"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/goodsname"
        android:layout_alignBottom="@+id/imagePart"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:text="Ferror"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/star"
        android:src="@drawable/empty_star"
        android:layout_alignBottom="@+id/goodsname"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:tag="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/detail"
        android:text="sda"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="10dp"
        android:textColor="@color/Gray"
        android:layout_below="@+id/goodsprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/goodsprice"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imagePart"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"
        android:text="123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/boundary"
        android:layout_below="@+id/detail"
        android:background="@color/colorGray"
        android:layout_width="350dp"

        android:layout_centerHorizontal="true"
        android:layout_height="1dp" />

    <View
        android:layout_alignParentRight="true"

        android:layout_below="@+id/imagePart"
        android:background="@color/colorGray"
        android:layout_marginTop="12dp"
        android:layout_marginRight="60dp"
        android:layout_width="0.5dp"
        android:layout_height="28dp"
        android:id="@+id/view" />
    <ImageView
        android:id="@+id/addshop"
        android:src="@drawable/shoplist"
        android:layout_marginRight="15dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/view"
        android:layout_alignEnd="@+id/star" />
    <TextView
        android:id="@+id/moreInfor"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="更多产品信息"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boundary"
        android:layout_alignParentEnd="true" />

    <View
        android:id="@+id/sBoundary"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/moreInfor"
        android:background="@color/colorGray"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="18dp" />
    <TextView
        android:id="@+id/sText"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="一键下单"
        android:layout_below="@+id/sBoundary"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/tBoundary"
        android:layout_below="@+id/sText"
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_height="1dp" />
    <TextView
        android:id="@+id/tText"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="分享商品"
        android:layout_below="@+id/tBoundary"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/fBoundary"
        android:layout_below="@+id/tText"
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_height="1dp" />
    <TextView
        android:id="@+id/fText"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="查看更多商品促销信息"
        android:layout_below="@+id/fBoundary"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_below="@+id/fText"
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_height="1dp" />

</RelativeLayout>
